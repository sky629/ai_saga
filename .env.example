# ===========================================
# AI Saga (ai_saga) - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Environment
KANG_ENV=local

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_DB=ai_saga
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Test Database
TEST_POSTGRES_DB=ai_saga_test
TEST_POSTGRES_USER=postgres
TEST_POSTGRES_PASSWORD=your_secure_password_here
TEST_POSTGRES_HOST=localhost
TEST_POSTGRES_PORT=5432

# ===========================================
# Redis Cache
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_AUTH_DB=1

# ===========================================
# JWT Authentication
# ===========================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_super_secret_jwt_key_here_generate_with_openssl
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# Google OAuth 2.0
# ===========================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# ===========================================
# CORS Settings
# ===========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ===========================================
# Gemini AI (for MUD Game)
# ===========================================
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=xxx
GEMINI_MODEL=gemini-2.5-flash
IMAGE_MODEL=imagen-3.0-generate-001

# ===========================================
# Kafka (Optional - for multiplayer features)
# ===========================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ===========================================
# Game Settings
# ===========================================
GAME_MIN_TURNS=5
GAME_MAX_TURNS=30

# ===========================================
# S3 Settings
# ===========================================
R2_ACCESS_KEY_ID=xxx
R2_SECRET_ACCESS_KEY=xxx
R2_ENDPOINT_URL=https://xxx.r2.cloudflarestorage.com
R2_BUCKET_NAME=ai-saga
